{
   "manifest_version": 2,
   "name": "SecretDiscount Cash Back",
   "version": "1.0",
   "description": "Hot Deals, Top Stores, Your Account Information and Cash Back are all just one click away.",
   "homepage_url": "http://secretdiscounter.ru/",
   "permissions": [
      "tabs",// Разрешить расширению работать с вкладками
      "webNavigation", "webRequest", "storage", "cookies", "unlimitedStorage", "webNavigation",
      //"http://sdyii/stores/data", "http://sdyii/accout/notification", "http://sdyii/fonts/proxima-nova"  // Разрешить расширению обращаться к указанному адресу
      "https://secretdiscounter.ru/stores/data", "http://secretdiscounter.ru/accout/notification", "http://sdyii/fonts"   // Разрешить расширению обращаться к указанному адресу
   ],
   "background": {
      //"page": "background.html"   ,
      "scripts": ["js/background.js"]
      //,"persistent": true
      //,"persistent": false
   },
   "browser_action": {
      "default_icon": "img/logo_mini.png",
      "default_title": "SecretDiscounter Cash Back Button",
      "default_popup": "popup.html" //Всплывающее окно
   },
   "content_scripts": [ {
      "all_frames": false,
      "js": [ "js/common/utils.js",
         "js/common/config.js",
         "js/common/icons.js",
         "js/common/templates.js",
         "js/common/storage.js",
         "js/common/storage_manage.js",
         "js/common/search.js",
         "js/common/stores.js",
         "js/content.js"],
      "matches": [ "<all_urls>" ],
      "run_at": "document_start",
      "css": ["css/content.css"]
   } ],
   //"content_security_policy": "script-src 'self' https://cloudfront.loggly.com/; object-src 'self'",
   "content_security_policy": "script-src 'self'; object-src 'self'",
   "icons": {
      "128": "img/logo_mini_128.png",
      "16": "img/logo_mini_16.png",
      "32": "img/logo_mini_32.png",
      "64": "img/logo_mini_64.png"
   },
  // "key": "",
   //"update_url": "https://clients2.google.com/service/update2/crx",
   "web_accessible_resources": [ "css/*.css", "fonts/*.woff", "fonts/*.woff2", "fonts/*.ttf", "fonts/*.otf" ]
