<div class="content-wrapper">
    <section class="account-stat">
        <div class="row">
            <div class="col-md-6">
                <div class="stat-block">
                    <div class="stat-head">
                        Пользователей зарегистрировано
                    </div>
                    <div class="stat-curr">
                        Всего
                        <span>{{users_count}}</span>
                    </div>
                    <div class="stat-curr">
                        Сегодня
                        <span>{{users_today_count}}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="stat-block">
                    <div class="stat-head">
                        Совершено платежей
                    </div>
                    <div class="stat-curr">
                        Всего
                        <span>{{payments_count}}</span>
                    </div>
                    <div class="stat-curr">
                        Сегодня
                        <span>{{payments_today_count}}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="stat-block-cashback">
                    Всего выплачено кэшбэка<br>
                    <span>{{_nf(total_cashback)|raw}} <i class="fa fa-rub" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
                <div class="row">
                    <div class="col-md-12 stat-block-actions">
                        Ожидает действий администратора
                        {% if notes.users_reviews %}<a href="/admin/reviews?ReviewsSearch%5Bis_active%5D=0"><span title="Неактивных отзывов" class="notes_users reviews">{{ notes.users_reviews }}</span></a>{% endif %}
                        {% if notes.users_withdraw %}<a href="/admin/withdraw?UsersWithdrawSearch%5Bstatus%5D=0"><span title="Запросов на вывод средств в ожидании" class="notes_users withdraw">{{ notes.users_withdraw }}</span></a>{% endif %}
                        {% if notes.users_charity %}<a href="/admin/charity"><span title="Запросов на благотвроительность в ожидании" class="notes_users charity">{{ notes.users_charity }}</span></a>{% endif %}
                        {% if notes.b2b_users_requests %}<a href="/admin/b2b_users?B2bUsersSearch%5Bis_active%5D=0"><span title="Запросов на регистрацию пользователей B2b" class="notes_users b2b_users">{{ notes.b2b_users_requests }}</span></a>{% endif %}
                        {% if notes.users_wait_moderation %}<a href="/admin/users?wait-moderation=1"><span title="Пользователей ожидает модерации" class="notes_users wait_moderation">{{ notes.users_wait_moderation }}</span></a>{% endif %}
                        {% if notes.users_on_actions %}<a href="/admin/users/action"><span title="Пользователей на акции" class="notes_users users_on_actions">{{ notes.users_on_actions }}</span></a>{% endif %}
                        {% if notes.watched_transitions %}<a href="/admin/transitions?TransitionsSearch%5Bwatched%5D=1">
                                <span title="Переходов по отслеживаемым шопам за сегодня" class="notes_users watched_transitions">{{ notes.watched_transitions }}</span>
                            </a>
                        {% endif %}
                    </div>
                    {% if visits_watcheds or visits_cpa or visits_sources %}
                         <div class="col-md-12 stat-block-actions">
                            Переходы сегодня
                            {% for visit in visits_sources %}
                                <a class="btn btn-primary" href="/admin/transitions{{ _getFilterAdd({'source':visit.source}, {}, 'TransitionsSearch')|raw }}">{{ _if(visit.source, 'Купоны', 'Магазины') }} ({{ visit.count}})</a>
                            {% endfor %}
                            {% for watch in visits_watcheds %}
                                <a class="btn btn-primary" title="Отслеживаемый шоп" href="/admin/transitions{{ _getFilterAdd({'store_id':watch.uid}, {}, 'TransitionsSearch')|raw }}">{{ watch.name}} ({{ watch.count}})</a>
                            {% endfor %}
                            {% for cpa in visits_cpa %}
                               <a class="btn btn-primary" title="Тип Cpa" href="/admin/transitions{{ _getFilterAdd({'cpa_name':cpa.id}, {}, 'TransitionsSearch')|raw }}">{{ cpa.name}} ({{ cpa.count }})</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {% if stores_updated or stores_new or stores_actions_end %}
                        <div class="col-md-12 stat-block-actions">
                            Шопы - изменение статусов сегодня
                            {% for updated in stores_updated %}
                                {% set statuses = {'0':'Приостановлен', '1': 'Активен', '-1': 'Выключен'} %}
                                <a class="btn btn-primary"
                                   href="/admin/stores?StoresSearch%5Bis_active%5D={{ updated.is_active }}&StoresSearch%5Bstatus_update_range%5D={{ _php_date('Y-m-d') }}+-+{{ _php_date('Y-m-d H:i:s') }}">
                                    {{ statuses[updated.is_active] }} ({{ updated.count }})
                                </a>
                            {% endfor %}
                            {% if stores_news %}
                                <a class="btn btn-primary" href="/admin/stores?StoresSearch%5Badded%5D={{ _php_date('Y-m-d') }}+-+{{ _php_date('Y-m-d H:i:s') }}">Новые ({{ stores_news }})</a>
                            {% endif %}
                            {% if stores_actions_end %}
                                <a class="btn btn-primary" href="/admin/stores?StoresSearch%5Baction_end%5D=1">Заканчивается время акции ({{ stores_actions_end }})</a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>

        <div class="row stat-block-actions">
            <h4 style="margin-bottom: 0;">Курсы валют</h4>
              {% for from,to_list in fullCursList %}
                  <div class="stat-block-cashback" style="margin-top: 0";>
                      <div class="col-md-2">
                          <table>
                          <tr><td>
                              <span style="font-size: 2rem;margin-bottom: 10px;margin-top: 20px;">{{from}}</span>
                          </td></tr>
                            {% for to,kurs in to_list %}
                                <tr><td>
                                    {{ _if(kurs,_nf(kurs,3),"-") }} {{ to }}
                                </td></tr>
                            {% endfor %}
                          </table>
                    </div>
                  </div>
              {% endfor %}
        </div>

    </section>
</div>