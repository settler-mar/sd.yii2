<section class="faq section-padding" id="faq">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">Часто задаваемые вопросы</h3>
            </div>
        </div>
        <div class="row">
        {% include 'parts/faq.twig' %}
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="/faq" class="btn btn-accent btn-large">Больше полезной информации</a>
            </div>
        </div>
    </div>
</section>
{% if top_reviews|length > 0 %}
<section class="testimonial-slider section-padding text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="flexslider">
                    <ul class="slides">
                        {% for review in top_reviews %}
                        <li>
                            <div class="avatar" style="background-image: url({{review.photo|replace({ 'http:':'https:'}) }});"></div>
                            <h2>{{review.text}}</h2>
                            <div class="rating">
                                {% for i in range(1, review.rating) %}
                                <span class="fa fa-star"></span>
                                {% endfor %}

                                {% set estar =  5 - review.rating %}
                                {% if estar != 0 %}
                                    {% for i in range(1, estar) %}
                                    <span class="fa fa-star-o"></span>
                                    {% endfor %}
                                {% endif %}         
                            </div>
                            <p class="author">{{review.name}}</p>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="text-center more-reviews">
                    <a href="/reviews" class="btn btn-fill btn-large">Все отзывы</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

{% if content %}
<section class="section-content section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{ content | raw}}
            </div>
        </div>
    </div>
</section>
{% endif %}
{% if not user_id %}
<section id="registation-footer" class="sign-up section-padding text-center" style="padding-top:0; margin-top:0px;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 ajax_load" res="/registration?index=1">

            </div>
        </div>
    </div>
</section>
{% endif %}
<section class="to-top">
    <div class="container">
        <div class="row">
            <div class="to-top-wrap">
                <a href="#top" class="top"><i class="fa fa-angle-up"></i></a>
            </div>
        </div>
    </div>
</section>