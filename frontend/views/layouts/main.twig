{{ register_asset_bundle('frontend/assets/AppAsset') }}
{{   void(this.beginPage()) }}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:fb="http://ogp.me/ns/fb#"
      xmlns:og="http://ogp.me/ns#"
      lang="{{ app.language }}">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta name="theme-color" content="#000">

    <base href="/">

    <title>{{ this.title |raw}}</title>

    <!-- SEO -->
    {{   void(this.head) }}
    {% if app.controller.pagination_tags.prev_page != null %}
      <link rel="prev" href="{{site_url}}{{app.controller.pagination_tags.prev_page}}">
    {% endif %}
    {% if app.controller.pagination_tags.next_page != null %}
      <link rel="next" href="{{site_url}}{{app.controller.pagination_tags.next_page}}">
    {% endif %}
    {{ html.csrfMetaTags | raw }}

    <!-- favicon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="shortcut icon" href="/favicon.ico">


    {% for style in exclusionCSSheader %}
      <link rel="stylesheet" href="{{style}}">
    {% endfor %}
    {% for css_link in minifyCSS %}
      <link rel="stylesheet" href="{{css_link}}">
    {% endfor %}
    {% for scriptH in exclusionJSheader %}
      <script src="{{scriptH}}" {% if scriptH starts with 'http' %} async="async" {% endif %}></script>
    {% endfor %}

    {% include 'base/header_include.twig' %}
  </head>
  <body>
    <!--[if lt IE 9]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    {% include 'base/header.twig' %}

    {% set slider=this.all_params.slider %}

    <div class="content-wrap{{ _if(params('global_bg'),' '~params('global_bg')) }}
      {% if slider|length == 0 and this.all_params.search_form == null and this.all_params.wrap !='index' and app.controller.params['breadcrumbs'] %} margin-top{% endif %}">

      {% if slider|length > 0 %}
        {% include 'parts/slider.twig' %}
      {% elseif this.all_params.search_form %}
          {% include ('parts/coupons_search.twig') %}
      {% endif %}


      {% if this.all_params.wrap=='index' %}
          {{ content|raw }}
      {% else %}
        {% include 'parts/catalog_breadcrumbs.twig' %}
        <div class="page-wrap
          {{ _if(params('global_wrap'),' '~params('global_wrap')) }}
          {{ _if(this.layout_mode=="account",' page-wrap-flex') }}">

          {% if this.layout_mode=="account" %}
            {% include 'parts/account/menu.twig' %}
            <div class="catalog-stores  account">
              {{ content|raw }}
            </div>
          {% else %}
            {{ content|raw }}
          {% endif %}
        </div>
      {% endif %}
    </div>

    {%  if this.all_params.pre_footer %}
      <section class="tablets_order-1 gray-box padding-box laptop_no_padding">
        <div class="page-wrap">

          {{ this.all_params.pre_footer | raw }}
        </div>
      </section>
    {% endif %}

    {% if not params('pre_footer_hide') %}
      {% include 'base/pre_footer.twig' %}
    {% endif %}

    {% include 'base/footer.twig' %}

    {{   void(this.endBody()) }}

    {% for script in minifyJS %}
      <script src="{{script}}"></script>
    {% endfor %}

    {% for scriptF in exclusionJSfooter %}
      <script src="{{scriptF}}" {% if scriptF starts with 'http' %} async="async" {% endif %}></script>
    {% endfor %}

    {{ Notification() | raw}}

    {% if not this.user_id %}
      <script charset="UTF-8" src="/js/msg.js" async></script>
    {% endif %}

    {% include 'base/footer_include.twig' %}
  </body>
</html>
{{ void(this.endPage()) }}
