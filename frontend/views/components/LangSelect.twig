{% if app.params.lang_select_active == 1 %}
  <div class="header-upline_lang">
      {% if regions|length>1 %}
      <ul class="header-upline_lang-list {% if show_dialog_panel  %}inactive{% endif %} btn-header" id="header-upline-region-select-button">
        <li>
          {% if regions[active.region].code %}
            {{ regions[active.region].code }}
          {% else %}
            {{ regions[active.region].name }}
          {% endif %}

          <ul class="header-upline_lang-list-drap" >
            {% for k,region in regions if region.active %}
              {% if k!=active.region %}
                <li>
                  <a href="{{ region.url }}" class="header-upline_lang-link">
                    {{ region.name|e }}
                    {% if region.code %}
                      ({{ region.code }})
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </li>
      </ul>
      {% endif %}

      {% if langs|length>1 %}
      <ul class="header-upline_lang-list {% if show_dialog_panel  %}inactive{% endif %} btn-header">
        <li>
          <img src="{{ langs[active.lang].icon|e }}" class="header-upline_lang-img">

          <ul class="header-upline_lang-list-drap">
            {% for k,lang in langs if lang.active %}
              {% if k!=active.lang %}
                <li>
                  <a href="{{ lang.url }}" class="header-upline_lang-link">
                    <img src="{{ lang.icon|e }}" class="header-upline_lang-img">
                    {{ lang.name|e }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </li>
      </ul>
      {% endif %}
      {% if show_dialog_panel %}
          <div class="header-countries_dialog">
              <div class="header-countries_dialog-wrap">
                  <div class="header-countries_dialog-image">
                      {{ svg('global', '', '@frontend')|raw }}
                  </div>
                  <div class="header-countries_dialog-dialog">
                      <div class="header-countries_dialog-dialog-title">
                          {{ t('main', 'country_select_dialog_title') }}
                      </div>
                      <p class="header-countries_dialog-dialog-text">
                          {{ t('main', 'country_select_dialog_text') }}
                      </p>
                      <div class="header-countries_dialog-dialog-buttons">
                          <button class="btn btn-mini header-countries_dialog-dialog-button-apply">{{ t('main', 'country_select_dialog_apply') }}</button>
                          <button class="btn btn-mini header-countries_dialog-dialog-button-choose">{{ t('main', 'country_select_dialog_select') }}</button>
                      </div>
                  </div>
                  <div class="header-countries_dialog-close">
                      <a class="header-countries_dialog-close-button">{{ svg('close')|raw }}</a>
                  </div>
              </div>
          </div>
      {% endif %}
  </div>
{% endif %}
<div style="display: none;" id="sd_lang_list" data-json="{{ langlist }}"></div>