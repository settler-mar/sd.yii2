{% set browsers = app.params.plugin.browsers %}
{% if browsers %}
<section class="margin install-plugin-index hidden ">
    <div class="page-wrap">
    <div class="install-plugin-index_border border-double align-center">
        <div class="border-double-in">
            <h2>Расширение SecretDiscounter</h2>
            <p>
                Установите наш плагин для браузера, и больше никогда не пропустите кэшбэк.<br> Получите возможность активировать кэшбэк в один клик прямо на сайте магазина!
            </p>
            <p><strong>Расширение доступно для следующих браузеров:</strong></p>
            <div class="plugin-browsers margin-half">
                {% for key, browser in browsers %}
                    {% if browser.status != 'disabled' %}
                        <a href="{{ browser.url }}" target="_blank"  class="plugin-browsers-browser plugin-browsers-browser-{{ key }} {% if browser.status == 'inactive' %} disabled {% endif %}"
                           {% if browser.status == 'inactive'  %}
                           data-notyfy_class="notify_box-alert"
                           data-button_yes="false"
                           data-title="Приносим свои извинения"
                           data-question="Плагин для браузера {{ _ucfirst(key) }} находится в разработке"
                           {% endif %}>{{ svg(browser.svg)|raw}}</a>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="margin-half">
                {% for key, browser in browsers %}
                    {% if browser.status != 'disabled' %}
                        <a href="{{ browser.url }}" target="_blank"  class="btn plugin-browsers-link plugin-browsers-link-{{ key }} hidden {% if browser.status == 'inactive' %} disabled {% endif %}"
                                {% if browser.status == 'inactive'  %}
                            data-notyfy_class="notify_box-alert"
                            data-button_yes="false"
                            data-title="Приносим свои извинения"
                            data-question="Плагин для браузера {{ _ucfirst(key) }} находится в разработке"
                                {% endif %}>Установить для {{ _ucfirst(key) }}&nbsp;&rarr;</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    </div>

</section>
{% endif %}