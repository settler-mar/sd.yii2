<div class="shop">
    {% if store.action_id == 1 %}
        <span class="promo-label x2"></span>
    {% endif %}
    <div class="logo">
        <a href="/stores/{{store.route}}"><img src="images/logos/{{store.logo}}" alt="{{store.name}}"></a>
    </div>
  <div class="shop__header"><a href="/stores/{{store.route}}" {% if store.name|length> 35 %} class="small-size" {% endif
    %}>{{store.name}}</a></div>
    <div class="gotostore">
        {% if user_id %}
        <a href="/goto/store:{{store.uid}}" target="_blank" rel="nofollow noopener" class="btn btn-fill">Сразу к покупкам</a>
        {% else %}
        <a href="#registration" class="btn btn-fill">Сразу к покупкам</a>
        {% endif %}
    </div>
    <div class="shop-bottom">
        <a class="cashback-link {% if store.action_id == 1 %}old-cashback{% endif %}" href="/stores/{{store.route}}">

            Кэшбэк <b>{{ _shop_cashback(store.displayed_cashback, store.currency)|raw }}</b>

        </a>
        {% if store.action_id == 1 %}
        <a class="cashback-link" href="/stores/{{store.route}}">

            Кэшбэк <b>{{ _shop_cashback(store.displayed_cashback, store.currency)|raw }}</b>

        </a>
        {% endif %}
        {% if user_id %}
            {% if store.uid in fav_ids %}
            <a class="favorite-link ignore-hash ia" href="#" data-affiliate-id="{{store.uid}}" data-toggle="tooltip" data-state="delete" data-placement="top" data-original-title="Удалить из избранного">
                <span class="fa fa-star"></span>
            </a>
            {% else %}
            <a class="favorite-link ignore-hash ia" href="#" data-affiliate-id="{{store.uid}}" data-toggle="tooltip" data-state="add" data-placement="top" data-original-title="Добавить в избранное">
                <span class="fa fa-star-o muted"></span>
            </a>
            {% endif %}
        {% else %}
        <a class="favorite-link ignore-hash" href="#registration" data-toggle="tooltip" data-placement="top" data-original-title="Добавить в избранное">
            <span class="fa fa-star-o muted"></span>
        </a>
        {% endif %}
    </div>
</div>