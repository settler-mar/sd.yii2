{% if footer_links_list|length>0 %}
    {% set footer_links_text = '' %}
    {% for item in footer_links_list %}
        {% if item.show==1 %}
            {% set footer_links_text = footer_links_text~'<a href="'~item.url~'"'~(item.outer==1 or item.blank==1 ? ' rel="nofollow noopener noreferrer"':'')~(item.blank==1 ?' target="_blank"':'')~(item.hide_mobile ? 'class="hide_mobile"':'')~'>'~(item.bold==1 ? '<b>':'')~item.name~(item.bold==1 ? '</b>':'')~'</a>' %}
        {% endif %}
    {% endfor %}
    {% if footer_links_text %}
        <div class="footer-menu-lists">
            <div class="footer-menu-title">{{ links_title }}</div>
            {{ footer_links_text|raw }}
        </div>
    {% endif %}
{% endif %}