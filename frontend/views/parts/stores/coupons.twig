{% if coupons %}
    <section class="margin">
        <div class="page-wrap">
            {% if current_store.name %}
                <h2>Купоны и промокоды {{ current_store.name }}</h2>
            {% else %}
                <h2>Новые купоны и промокоды</h2>
            {% endif %}
            <div class="coupons-list coupons-list-stores  narrow list-4 narrow_off">
                {% for coupon in coupons %}
                    {% include 'parts/coupon.twig' %}
                {% endfor %}
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
            </div>
            <div class="align-center">
                {% if current_store.name and current_store.route %}
                    <a href="/coupons/{{ current_store.route }}" class="btn btn-transform">Все промокоды {{ current_store.name }}</a>
                {% else %}
                    <a href="/coupons" class="btn btn-transform">Все промокоды</a>
                {% endif %}
            </div>
        </div>
    </section>
{% endif %}