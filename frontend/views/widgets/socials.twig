{{ use('yii/helpers/Html') }}
{{ use('yii/web/View') }}

{{ register_asset_bundle(assetBundle) }}

{% if js %}
  {{ this.registerJs(js) }}
{% endif %}

<div class="eauth sd-eauth" id="{{ id }}">
  <ul class="eauth-list{{ dop_class }}">
    {% for name, service in services  %}
      <li class="eauth-service {% if vertical %} vertical {% endif %}">
        {% set title = vertical ? service.title : '' %}
        {% set link = action~'?service='~name %}
        {{ html.a(svg(service.id~'-round','eauth-icon')~title, link,{
          'class': 'eauth-service-link_sd '~name,
          'data-eauth-service': service.id,
        })|raw }}
      </li>
    {% endfor %}
  </ul>
</div>