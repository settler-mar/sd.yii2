{% if h1 %}
  {#h1 из базы#}
    {% set h1_final =  h1 %}
{% else %}
  {#если нет, то#}
    {% set h1_final = t('main', 'products')~' '~store.name~' <span>('~total_v~')</span>' %}

{% endif %}
      <section class="gray-box wrap-round margin">
        <h1 class="page-header align-center laptop-no-margin-bottom" >
            {{ h1_final|raw }}
            <a class="catalog_products_h1_question shop-name-question" data-placement="top" data-toggle="tooltip" data-clickable="1"
                    data-original-title="{{ t('main', 'bought_by_sd_updated_at{time}', {'time': _local_date(update_time, t('dictionary', 'date_format_middle'))})|raw }}"
            >{{ svg('question-circle-o', 'shop_header_big-question_icon')|raw }}</a>
        </h1>
        {% if content %}
          <div class="catalog_category-short-description laptop_hide catalog_category-content">
              {{ content|raw }}
          </div>
        {% endif %}
      </section>

<section class="catalog margin">
  <div class="page-wrap page-wrap-flex">

    <div class="catalog-payments">

      {#выбор и отображение сортировки#}
      <div class="margin-half page-wrap-flex catalog-stores_sort">
        {% include('parts/sort-links.twig') %}
        <div class="catalog-stores_sort-info">
           {{ t('main','show_{start}-{end}_from_{total}', {'start':  (total_v > 0 ? offset_products + 1 : '0'), 'end': offset_products + show_products, 'total': total_v})|raw }}
        </div>
      </div>

      <div class="category-title-wrapper">
        {% include 'parts/dropdown-limit-catalog.twig' %}
      </div>

      <div class="catalog-stores_stores margin">
        {% if products|length > 0 %}
          <div class="catalog-stores_list shops margin">
            {% for product in products %}

              {% include 'parts/product.twig' %}

              {#{% if loop.index == loop.length or loop.index % 4 == 0 %}#}
              {% if loop.index % 4 == 0 %}
                {{ _constant('banner_google')|raw }}
              {% endif %}

            {% endfor %}
          </div>

          {% include('parts/pagination.twig') %}


        {% else %}
          <p>{{ t('main', 'not_found')|raw }}</p>
        {% endif %}
      </div>

        <div class="catalog_products_store_conditions" id="store_tariffs_id">{{ store.conditions|raw }}</div>


    </div>
  </div>
</section>

