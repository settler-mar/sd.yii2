{{ use('/yii/widgets/ActiveForm') }}
<div class="products-search">
    {% set form = active_form_begin({
            'action': ['index'],
            'method': 'get',
        })
    %}

    {{ form.field(model, 'uid')|raw }}

    {{ form.field(model, 'store_id')|raw }}

    {{ form.field(model, 'product_id')|raw }}

    {{ form.field(model, 'title')|raw }}

    {{ form.field(model, 'description')|raw }}

    {# form.field(model, 'image')|raw #}

    {# form.field(model, 'url')|raw #}

    {# form.field(model, 'last_buy')|raw #}

    {# form.field(model, 'buy_count')|raw #}

    {# form.field(model, 'last_price')|raw #}

    {# form.field(model, 'currency')|raw #}

    {# form.field(model, 'created_at')|raw #}

    <div class="form-group">
        <input type="submit" value="{{ 'Search' }}" class="btn btn-primary">
        <input type="reset" value="{{ 'Reset' }}" class="btn btn-default">
    </div>
    {{ active_form_end() }}
</div>