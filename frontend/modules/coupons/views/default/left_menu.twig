    {{ use('frontend/components/CategoryCouponsMenu') }}
    {% set category_tree = category_coupons_menu_widget({'search_item':app.params.coupons_menu_abc}) %}
    {% if category_tree %}
        <div class="catalog-categories_tree-cat accordeon">
            <div class="catalog-categories_tree-cat-close">
                {{ svg('close', 'catalog-categories_tree-cat-close-icon')|raw }}
                <span class="catalog-categories_tree-cat-close-tittle">{{ t('main', 'shops_left_menu_categories')|raw }}</span>
            </div>
            {{category_tree|raw}}
        </div>
        {% if popular_stores %}
            <div class="catalog-categories_popular-stores">
                <h3 class="catalog-categories_popular-stores-header">{{ t('main', 'coupons_left_menu_shops')|raw }}</h3>
                <div class="catalog-categories_popular-stores-content">
                    {% for store in popular_stores %}
                        {% if app.request.pathinfo == 'coupons/'~store.route %}
                            <span>{{ store.name }}</span>
                        {% else %}
                            <a href="/coupons/{{ store.route }}">{{ store.name }}</a>
                        {% endif %}
                        {#<a href="/coupons/{{ store.route }}" {% if app.request.pathinfo == 'coupons/'~store.route %}class="active"{% endif %}>{{ store.name }}</a>#}
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if coupons_top5 and coupons_top5|length > 0 %}
            <div  class="catalog-categories_popular-stores">
                <h3 class="catalog-categories_popular-stores-header">{{ t('main', 'coupons_left_menu_the_bests')|raw }}</h3>
                <div class="catalog-categories_popular-stores-content coupons-list left-menu">
                    {% for coupon in coupons_top5 %}
                        {% include 'parts/coupon.twig' %}
                    {% endfor %}
                </div>
                <div class="catalog-categories_popular-stores-links">
                    <a href="/coupons">{{ t('main', 'coupons_left_menu_show_all')|raw }}</a>
                </div>
            </div>
        {% endif %}

        {% if menu_subscribe == 1 %}
            <div class="catalog-categories_subscribe">
                {% include('parts/mail_subscribe.twig') %}
            </div>
        {% endif %}

        {{ use('frontend/components/Banner') }}

        {% set banner_places = current_category ?
            ['coupons-left-menu','coupons-'~current_category.uid~'-left-menu'] :
            ['coupons-left-menu','coupons-catalog-left-menu'] %}

        {%  set banners  = banner_widget({'place':banner_places,'options':{'wrapper_class':'banner__wrapper',}}) %}
        {% if banners %}
            {{ banners|raw }}
        {% endif %}

        {% if posts %}
          {%  if params('lang_code')=='ru' %}
            <div class="catalog-categories_blogposts">
                {% include('parts/blog_posts.twig') %}
            </div>
            {% endif %}
        {% endif %}

        {% set item_low = 1 %}
        {% set comments_max_height = 1 %}
        {% include('parts/user_reviews.twig') %}

    {% endif %}

