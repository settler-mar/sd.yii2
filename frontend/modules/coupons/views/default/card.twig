<!--поле контент из метатегов -->
{% if content and page==1%}
  <section class="gray-box wrap-round margin">
    {{ content | raw}}
  </section>
{% endif %}

<section class="catalog margin">
  <div class="page-wrap page-wrap-flex">
    {#слева категории#}

    <div class="catalog-categories">
      {% include('left_menu.twig') %}
    </div>
    {#справа контент#}
    <div class="catalog-stores coupons">

      <h1 >
        {% if h1 %}
          <!--h1 из базы-->
          {{h1|raw}}
        {% else %}
          <!--если нет, то -->
          {{ store.name }}: {{coupon.name}}
        {% endif%}
      </h1>

      {% include('parts/coupon.twig') %}

      <div class="content-wrap">
        <h2>Еще больше промокодов {{ store.name }}</h2>
        <div  class="catalog-coupons margin">
          {% if stores_coupon|length > 0 %}
            <div class="catalog_list catalog-coupons_list coupons-list margin narrow_off">
              {% if stores_coupon|length > 0 %}
                {% for coupon in stores_coupon %}
                  {% include 'parts/coupon.twig' %}
                {% endfor %}
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
                <div class="coupons coupons-empty"></div>
              {% else %}
                Ничего не найдено.
              {% endif %}

            </div>

            <div class="catalog-stores_pagination catalog_pagination">
              {% if pagination %}
                {{pagination|raw}}
              {% endif %}
            </div>
          {% else %}
            <p>Ничего не найдено.</p>
          {% endif %}
        </div>
      </div>

      {% if coupon_ended|length > 0 %}
        {% include('parts/coupon_ended_list.twig') %}
      {% endif %}

      <div class="coupons_buttons align-center margin">
        {% if counts.expired > 0 %}
          <a class="btn btn-round btn-transform btn-mini coupons_buttons-margin" href="/coupons/{{ store.routeUrl }}/expired"><span>Все завершившиеся акции, купоны и промокоды ({{ counts.expired}})</span></a>
        {% endif %}

        {% if counts.actual > 0 %}
          <a class="btn btn-round btn-transform btn-mini coupons_buttons-margin" href="/coupons/{{ store.routeUrl }}"><span>Все промокоды этого магазина ({{ total_v }})</span></a>
        {% endif %}

        <a class="btn btn-round btn-transform btn-mini coupons_buttons-margin" href="/coupons"><span>Все промокоды ({{ total_all_coupons }})</span></a>
      </div>

        {% if coupons|length > 0 %}
          <h2>Лучшие купоны</h2>
          <div  class="catalog-coupons margin">
            <div class="catalog_list catalog-coupons_list coupons-list margin narrow_off">
                {% for coupon in coupons %}
                    {% include 'parts/coupon.twig' %}
                {% endfor %}
            </div>
          </div>
          <div class="coupons_buttons align-center margin">
            <a class="btn  btn-round coupons_buttons-margin" href="/coupons"><span>Показать все купоны и промокоды</span></a>
          </div>
        {% endif %}

    </div>
  </div>
</section>
