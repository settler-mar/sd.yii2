<!--поле контент из метатегов -->
{% if content and pagination_page==1%}
  <section class="gray-box wrap-round margin catalog_category-content laptop_hide">
    {{ content | raw}}
  </section>
{% endif %}

<section class="catalog margin">
  <div class="page-wrap page-wrap-flex">
    {#слева категории#}

    <div class="catalog-categories">
      {% include('left_menu.twig') %}
    </div>
    {#справа контент#}
    <div class="catalog-stores coupons">

      <h1 class="page-header">
        {% if h1 %}
          <!--h1 из базы-->
          {{h1|raw}}
        {% else %}
          <!--если нет, то -->
          {{ current_store.name }}: {{coupon.name}}
        {% endif%}
      </h1>

      <div class="coupons-list single">
          {% include('parts/coupon.twig') %}
      </div>

      {% include 'parts/coupons_comments.twig' %}

      <div class="coupons_mobile-relative">
        {% if stores_coupon|length > 0 %}
          <h2 class="content-header">{{ t('main','more_promo_codes',{'store':current_store.name}) }}</h2>
          <div  class="catalog-coupons margin">
            <div class="catalog_list catalog-coupons_list coupons-list margin-half narrow_off">
              {% for coupon in stores_coupon %}
                {% include 'parts/coupon.twig' %}
              {% endfor %}
              <div class="coupons coupons-empty"></div>
              <div class="coupons coupons-empty"></div>
              <div class="coupons coupons-empty"></div>
              <div class="coupons coupons-empty"></div>
              <div class="coupons coupons-empty"></div>
              <div class="coupons coupons-empty"></div>
              <div class="catalog-stores_subscribe coupons_mobile-bottom">
                {% include('parts/mail_subscribe.twig') %}
              </div>
            </div>



            {% include('parts/pagination.twig') %}
        </div>
        {%  else %}
            <div class="catalog-stores_subscribe coupons_mobile-bottom">
                {% include('parts/mail_subscribe.twig') %}
            </div>
        {% endif %}

        {% if coupon_ended|length > 0 %}
          {% include('parts/coupon_ended_list.twig') %}
        {% endif %}

        <div class="coupons_buttons align-center">
          {% if counts.expired > 0 %}
            <div class="coupons_buttons-top">
                <a class="btn btn-transform btn-narrow coupons_buttons-margin" href="{{ _href('/coupons/'~current_store.routeUrl~'/expired')|raw }}"><span>{{ t('main', 'coupons_show_all_expired')|raw }} ({{ counts.expired}})</span></a>
            </div>
          {% endif %}
          <div class="coupons_buttons-bottom">
            {% if counts.actual > 0 %}
              <a class="btn btn-mini btn-transform btn-round coupons_buttons-margin" href="{{ _href('/coupons/'~current_store.routeUrl)|raw }}"><span>{{ t('main', 'coupons_show_all_for_shop')|raw }} ({{ total_v }})</span></a>
            {% endif %}

            <a class="btn btn-mini btn-round coupons_buttons-margin" href="{{ _href('/coupons')|raw }}"><span>{{ t('main', 'coupons_show_all')|raw }} ({{ total_all_coupons }})</span></a>
          </div>
        </div>

        {% if products_store.show_products==1 %}
          <section class="margin">
            <div class="page-wrap">
              <h2 class="content-header">{{ t('main', 'shops_produncts_{store}', {'store': products_store.name})|raw }}</h2>

              {% set products = products_store.topProducts  %}

              {% if products|length > 0 %}
                <div class="catalog-stores_list shops margin">
                  {% set store = products_store %}
                  {% for product in products %}
                    {% include 'parts/product.twig' %}
                  {% endfor %}
                </div>

                <div class="catalog_products_store_conditions" id="store_tariffs_id">
                  <div class="catalog_products_store_conditions_content">
                    {{ store.conditions | raw}}
                  </div>
                </div>

              {% else %}
                <p>{{ t('main', 'not_found')|raw }}</p>
              {% endif %}

              <div class="align-center">
                <a href="/products/{{ products_store.route }}" class="btn btn-transform"  target="_blank" rel="noopener noreferrer nofollow">{{ t('main', 'all_shops_produncts_{store}', {'store': products_store.name})|raw }} →</a>
              </div>
            </div>
          </section>
        {% endif %}
      </div>
    </div>
  </div>
</section>


