<div class="content-wrapper">
    <section>
        <div class="row">
            <div class="col-md-12">
                <h1>{{ html.encode(this.title) }}</h1>
                {{ use('/yii/widgets/ActiveForm') }}
                <div class="template-form">
                    {% set form = active_form_begin() %}

                        {{ form.field(model, 'code').textInput({'maxlength':true})|raw }}

                        {{ form.field(model, 'name').textInput({'maxlength':true})|raw }}

                        {{ form.field(model, 'data').textarea({'rows':6})|raw }}

                        {{ form.field(model, 'test_data').textarea({'rows':6})|raw }}

                    <div class="form-group">
                        <input type="submit" value="{{ model.isNewRecord ? 'Create' : 'Update' }}" class="{{ model.isNewRecord ? "btn btn-success" : "btn btn-primary" }}">
                    </div>
                    {{ active_form_end() }}
                </div>
            </div>
        </div>
    </section>
</div>