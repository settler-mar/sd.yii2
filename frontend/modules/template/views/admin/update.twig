                        <li data-tag="table" data-sub-tag="total">{{ svg('/editor/sum')|raw }}<span>{{ t('main','table_total') }}</span></li>
                                              #}
                      </ul>
                    </div>
                    <div id="editor-row" class="tab-pane fade">
