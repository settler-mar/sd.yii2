{% include('parts/account/user_balance.twig') %}

<section class="account account-padding">

  {{ _constant('account_charity')|raw }}

  {% if charity|length > 0 %}

    <table class="table table-charity adaptive adaptive-tablets">
      <tr>
        <th>{{ t('account', 'charity_type')|raw }}</th>
        <th>{{ t('common', 'date')|raw }}</th>
        <th class="sum">{{ t('common', 'amount')|raw }}</th>
        <th></th>
      </tr>
      {% set curr = currencyIcon(app.user.identity.currency) %}
      {% for chty in charity %}
        <tr {% if chty.is_listed==1 %}class="status_bg_{{ chty.is_listed }}"{% endif %}>
          <td>
            {% if chty.foundation_id == '9' %}
              {{ chty.note }}
            {% else %}
              {{ t('account', 'charity_to')|raw }} {{ chty.title }}
            {% endif %}
          </td>
          <td>{{ _local_date(chty.added,  t('dictionary', 'date_format_long'))|raw }}</td>
          <td class="cashback">
            {{ _nf(chty.amount) | raw }} {{ curr|raw }}
          </td>
          <td>
            {% if chty.is_listed==1 %}
              {{ t('account', 'charity_blocked')|raw }}
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </table>

  {% else %}
    <div class="not-found">{{ t('account', 'charity_empty')|raw }}</div>
  {% endif %}

  {% include '/parts/pagination.twig' %}
</section>
<section class="account-padding">
  <h3>{{ t('account', 'charity_total')|raw }}: {{ _nf(user.sum_foundation) | raw }} {{ curr|raw }}</h3>
</section>