{% set title = 'Update Stores: ' ~ model.name %}
{{ set(this, 'title', title) }}
{% if not this.params.breadcrumbs %}
{{ set(this, 'params', this.params|merge({'breadcrumbs': []})) }}
{% endif %}
{% set breadcrumbs = this.params.breadcrumbs %}
{% set breadcrumbs = breadcrumbs|merge([{'label': 'Stores', 'url': path(['index'])}]) %}
{% set breadcrumbs = breadcrumbs|merge([{'label': model.name, 'url': path('view', {'id': model.uid})}]) %}
{% set breadcrumbs = breadcrumbs|merge(['Update']) %}
{{ set(this, 'params', this.params|merge({'breadcrumbs': breadcrumbs})) }}
<div class="stores-update">
    <div class="content-wrapper">
        <section class="account-padding view-list view-current">
            <div class="row">
                {% if store %}
                    <div class="col-md-12">
                        <form enctype="multipart/form-data" method="post" action="/admin/stores/update?id={{store.uid}}">
                            <p class="title first">Основная информация</p>
                            <div class="edit_wrapper">
                                <div class="edit_blk">
                                    <p><span>UID:</span> {{store.uid}}</p>
                                    <p><span>Добавлен:</span> {{store.added}}</p>
                                    <p><span>Посещений:</span> {{store.visit}}</p>
                                    <p><span>Картчка магазина:</span> <a href="/stores/{{store.route}}" target="_blank">перейти</a></p>
                                    <p><span>Название:</span> <br><input type="text" name="name" value="{{store.name}}"></p>
                                    <p><span>Название по русски:</span> <br><input type="text" name="local_name" value="{{store.local_name}}"></p>
                                    <p><span>Route:</span> <br><input type="text" name="route" value="{{store.route}}"></p>
                                    <p><span>URL:</span> <br><input type="text" name="url" value="{{store.url}}"></p>
                                </div>
                                <div class="edit_blk">
                                    <p><span>Logo:</span> <img src="/images/logos/{{store.logo}}"> <br> <input name="logo" type="file"></p>
                                    <p><span>Валюта:</span> <br><input type="text" name="currency" value="{{store.currency}}"></p>
                                    <p><span>Отображаемый cashback:</span> <br><input type="text" name="displayed_cashback" value="{{store.displayed_cashback}}"></p>
                                    <p><span>Отображаемое время холда (дней):</span> <br><input type="text" name="hold_time" value="{{store.hold_time}}"></p>
                                    <p><span>Процент отдаваемый от нашей выгоды:</span> <br><input type="text" name="percent" value="{{store.percent}}"></p>
                                    <p><span>Магазин активен:</span><br>
                                        <select name="is_active">
                                            <option value="-1" {% if store.is_active == -1 %} selected {% endif %}>Заблокирован пользователем</option>
                                            <option value="0" {% if store.is_active == 0 %} selected {% endif %}>Временно не активен</option>
                                            <option value="1" {% if store.is_active == 1 %} selected {% endif %}>Активен</option>
                                        </select>
                                    </p>
                                </div>
                            </div>
                            <p><span>Alias:</span> <br><textarea  name="alias" >{{store.alias}}</textarea></p>
                            <p><span>Краткое описание  (Информация о  ...):</span> <br> <textarea name="short_description" class="visual_editor">{{store.short_description}}</textarea></p>
                            <p>
                                <span>Описание  (Информация о кэшбэк в ...):</span>
                                <br> <textarea name="description" class="visual_editor">{{store.description}}</textarea>
                            </p>
                            <p><span>Специальные условия  (Дополнительная информация):</span> <br> <textarea name="conditions" class="visual_editor">{{store.conditions}}</textarea></p>
                            <input type="hidden" name="type" value="update_main_information">
                            <button type="submit">Сохранить</button>
                        </form>

                        <p class="title">Тарифы</p>

                        <div class="tarif_select_blk">
                            {% if tariffs|length > 0 %}
                                {% for tariff in tariffs %}
                                    {% include 'admin/store/tab_head_suf.html' %}
                                {% endfor %}
                            {% endif %}
                            <ul class="tab_control ajax_save" uid="{{store.uid}}" save_url="/admin/stores/ajax_save/active_cpa">
                                {% if tariffs|length > 0 %}
                                    {% for tariff in tariffs %}
                                        {% include 'admin/store/tab_head_but.html' %}
                                    {% endfor %}
                                {% endif %}
                                <li class="add_button">
                                    Добавить CPA
                                    <ul>
                                        {% for cpa in cpa_list %}
                                            <li code="{{cpa.id}}" parent="{{store.uid}}" class="add_shop_element" mode="cpa">{{cpa.name}}</li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            </ul>
                            <div class="content_tab">
                                {% if tariffs|length > 0 %}
                                    {% for tariff in tariffs %}
                                        {% include 'admin/store/tab_body.html' %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>

                        {% if categories|length > 0 %}
                            <p class="title">Категории магазина</p>
                            <form method="post" action="/admin/stores/update?id={{store.uid}}" name="categories-edit-stores">
                                <ul class="ch_tree">
                                    {% for category in categories %}
                                        <li>
                                            <label>
                                                <input {% if category.uid in store_categories %} checked {% endif %} data-uid="{{category.uid}}" data-parent-id="{{category.parent_id}}" type="checkbox" name="category_id[]" value="{{category.uid}}"><span>{{category.name}}</span>
                                            </label>
                                            {% if category.items|length > 0 %}
                                                <ul>
                                                    {% for category_ch in category.items %}
                                                        <li>
                                                            <label>
                                                                <input {% if category_ch.uid in store_categories %} checked {% endif %} data-uid="{{category_ch.uid}}" data-parent-id="{{category_ch.parent_id}}" type="checkbox" name="category_id[]" value="{{category_ch.uid}}"><span>{{category_ch.name}}</span>
                                                            </label>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                    <input type="hidden" name="id" value="{{store.uid}}">
                                    <input type="hidden" name="type" value="update_categories">
                                    <button type="submit">Изменить</button>
                                </ul>
                            </form>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="col-md-12">
                        <div class="not-found">Магазин не найден.</div>
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
</div>