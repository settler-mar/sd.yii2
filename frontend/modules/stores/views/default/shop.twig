<section class="view-store triangle-background">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="shop-name {% if current_store.name|length < 14 %} big {% endif %}">
                    {{ _if(current_store.is_offline,'<span class="shop-name-offline">Offline:</span>') | raw}}
                    {{current_store.name}}
                </div>
                <div class="hold-name">
                    Кэшбэк станет активным для вывода через
                    <span>{{current_store.hold_time}} дней
                        <a href="#" class="shop-name-question" data-placement="bottom" data-toggle="tooltip"
                           title="Это время требуется магазину, чтобы убедиться, что не будет возврата товара. Нередко кэшбэк подтверждается и раньше.">
                            <i data-tooltip=""
                               class="fa fa-question-circle-o" aria-hidden="true">
                            </i>
                        </a>
                    </span>
                    <span class="avg">(среднее время обработки)</span>
                </div>
                <div class="" ></div>
            </div>
            <div class="col-md-4">
                <div class="favorite">
                    {% if user_id %}
                        {% if current_store.uid in fav_ids %}
                        <a class="favorite-link ignore-hash ia" href="#" data-affiliate-id="{{current_store.uid}}" data-toggle="tooltip" data-state="delete" data-placement="top" data-original-title="Удалить из Избранного">
                            {#<span class="fa fa-star"></span>#}
                            <span class="fa fa-heart"></span>
                        </a>
                        {% else %}
                        <a class="favorite-link ignore-hash ia" href="#" data-affiliate-id="{{current_store.uid}}" data-toggle="tooltip" data-state="add" data-placement="top" data-original-title="Добавить в Избранное">
                            {#<span class="fa fa-star-o muted"></span>#}
                            <span class="fa fa-heart-o muted"></span>
                        </a>
                        {% endif %}
                    {% else %}
                    <a class="favorite-link ignore-hash" href="#login" data-toggle="tooltip" data-placement="top" data-original-title="Добавить в избранное">
                        {#<span class="fa fa-star-o muted"></span>#}
                        <span class="fa fa-heart-o muted"></span>
                    </a>
                    {% endif %}
                </div>
                <div class="logo">
                    <img src="/images/logos/{{current_store.logo}}" alt="{{current_store.name}}" height="59px">
                </div>
                <div class="rating">
                    {% if store_rating.value > 0 %}
                        {% for i in range(1, store_rating.value|round()) %}
                            <span class="fa fa-star"></span>
                        {% endfor %}
                    {% endif %}

                    {% set estar =  5 - store_rating.value|round() %}
                    {% if estar != 0 %}
                        {% for i in range(1, estar) %}
                        <span class="fa fa-star-o"></span>
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="goto {% if current_store.is_offline==1 %}offline{% endif %}" id="goto">
                    {% if current_store.is_offline==0 %}
                        {% if user_id %}
                            {% if current_store.is_active == 1 %}
                                <a href="/goto/store:{{current_store.uid}}" id="gotostore" target="_blank" rel="nofollow noopener" class="btn btn-fill btn-large">Перейти к покупкам</a>
                            {% else %}
                                 <a href="#shop_not_active" ref="popup" class="btn btn-fill btn-large fancybox">Перейти к покупкам</a>
                            {% endif %}
                        {% else %}
                            <a href="#login" id="gotostore" class="btn btn-fill btn-large">Перейти к покупкам</a>
                        {% endif %}
                        <a href="#howgetcashback" class="howgetcashback">Как получить кэшбэк?</a>
                    {% else %}
                        <a href="#howgetcashback" id="gotostore" class="btn btn-fill btn-large">Как получить кэшбэк?</a>
                    {% endif %}
                </div>

            </div>
            <div class="col-md-4">
                <div class="cashback">
                    <div class="{% if current_store.action_id != 0 %}old{% endif %}">
                        Кэшбэк
                        <span>{{ _cashback(current_store.displayed_cashback, current_store.currency)|raw }}</span>
                    </div>
                    {% if current_store.action_id != 0 %}
                        <div class="promo">
                            Кэшбэк
                            <span>{{ _cashback(current_store.displayed_cashback, current_store.currency, current_store.action_id)|raw }}</span>
                        </div>
                    {% endif %}
                </div>
                {% if current_store.conditions != '' or current_store.is_active==0 %}
                <div class="additional-information">
                    <span>Дополнительная информация:</span>
                    <div class="additional-information__content">
                        {% if current_store.is_active==0 %}
                            {{ _constant('shop_not_info')|raw}}
                        {% endif %}
                        {{ _no_br(current_store.conditions)|raw}}
                    </div>
                    <div >
                        <div class="additional-information__handle more"><a href="#">Подробнее<i class="fa fa-small fa-angle-down"></i></a></div>
                        <div class="additional-information__handle less"><a href="#">Скрыть<i class="fa fa-small fa-angle-up"></i></a></div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
<div class="container">
  <div class="row">
    <h1 class="store-h1">
        {% if h1%}
            {{ h1|raw }}
        {% else %}
