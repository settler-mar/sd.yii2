

<section class="catalog margin">
  <div class="page-wrap page-wrap-flex">
    {#слева категории#}
    <div class="catalog-categories">
      {% include('parts/stores/left_menu.twig') %}
    </div>

    {#справа шопы#}
    <div class="catalog-stores coupons">
      <h1>
          {% if h1 %}
            {#h1 из базы#}
              {{ h1|raw }}
          {% else %}
            {#если нет, то#}
            {{ t('main', 'stores_abc_default_h1_{count}_', {'count': total_v})|raw }}
          {% endif %}
      </h1>

      <div class="catalog-categories_tree-toggle">
          {{ svg('bars-slim', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-close')|raw }}
          {{ svg('close', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-open')|raw }}
        <span class="catalog-categories_tree-toggle-tittle">{{ t('main', 'stores_change_category')|raw }}</span>
      </div>

      <div class="coupons-abc">
          <div  class="coupons-abc_chars">
              {% for char, stores in stores_abc|slice(0, 27) %}
                  {% if stores|length %}
                    <a href="#store{{ char|raw }}" class="scroll_to">{{ char|raw }} </a>
                  {% else %}
                    <span>{{ char|raw }}</span>
                  {% endif %}
              {% endfor %}
          </div>
          <div  class="coupons-abc_chars row-2">
              {% for char, stores in stores_abc|slice(27) %}
                  {% if stores|length %}
                    <a href="#store{{ char|raw }}"  class="scroll_to">{{ char|raw }}</a>
                  {% else %}
                    <span>{{ char|raw }}</span>
                  {% endif %}
              {% endfor %}
          </div>
      </div>

      <div  class="coupons-abc_list">
          {% for char, stores in stores_abc %}
              {% if stores|length %}
                <div id="store{{ char|raw }}" class="coupons-abc_list-item">
                  <div class="coupons-abc_list-item-char">{{ char|raw }}</div>
                  <div class="coupons-abc_list-item-stores">
                      {% for store in stores %}
                        <a href="{{ _href('/stores/'~store.route)|raw }}">{{ store.name}}</a>
                      {% endfor %}
                  </div>
                </div>

              {% endif %}
          {% endfor %}
      </div>

        {#контент#}
      {% if content %}
          <div class="catalog_category-content margin">
              {{ content | raw }}
          </div>
      {% endif %}


    </div>
  </div>
</section>

