{{ use('/yii/widgets/ActiveForm') }}
<div class="banners-search">
    {% set form = active_form_begin({
            'action': ['index'],
            'method': 'get',
        })
    %}

    {{ form.field(model, 'uid')|raw }}

    {{ form.field(model, 'picture')|raw }}

    {{ form.field(model, 'url')|raw }}

    {{ form.field(model, 'new_window')|raw }}

    {{ form.field(model, 'is_active')|raw }}

    {# form.field(model, 'places')|raw #}

    {# form.field(model, 'order')|raw #}

    {# form.field(model, 'created_at')|raw #}

    {# form.field(model, 'updated_at')|raw #}

    <div class="form-group">
        <input type="submit" value="{{ 'Search' }}" class="btn btn-primary">
        <input type="reset" value="{{ 'Reset' }}" class="btn btn-default">
    </div>
    {{ active_form_end() }}
</div>