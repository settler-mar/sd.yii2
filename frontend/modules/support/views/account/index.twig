{% include('parts/account/user_balance.twig') %}

<section class="support account-padding  margin">
  <div class="border-wrap account-settings ajax_form">

  {{ _constant('account_support')|raw }}

  <form action="/account/support" method="post" role="form" name="support-form">
      <div class="form-group">
        <div class="form-input-group">
          <i>{{ svg("envelope",'form-icon')|raw }}</i>
          <input autocomplete="off" name="title" type="text"
                 placeholder="{{ t('account', 'support_mail_topic') }}" required>
        </div>
        <div class="help-block help-block-error"></div>
      </div>
    <div class="form-group">
      <div class="form-textarea-group">

        <textarea cols="30" rows="10"
                  class="account-textarea"
                  name="message"
                  placeholder="{{ t('account', 'support_mail_text') }}"
                  required
        ></textarea>
      </div>
    </div>
    <div class="align-center">
      <button type="submit" class="btn">{{ t('account', 'support_button') }}</button>
    </div>
  </form>
  </div>


</section>
