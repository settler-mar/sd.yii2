{{ use('/yii/widgets/ActiveForm') }}
<div class="slider-search">
    {% set form = active_form_begin({
            'action': ['index'],
            'method': 'get',
        })
    %}

    {{ form.field(model, 'uid')|raw }}

    {{ form.field(model, 'title')|raw }}

    {{ form.field(model, 'description')|raw }}

    {{ form.field(model, 'date_start')|raw }}

    {{ form.field(model, 'date_end')|raw }}

    {# form.field(model, 'type')|raw #}

    {# form.field(model, 'html')|raw #}

    {# form.field(model, 'image')|raw #}

    {# form.field(model, 'show_as')|raw #}

    {# form.field(model, 'is_showed')|raw #}

    {# form.field(model, 'store_id')|raw #}

    <div class="form-group">
        <input type="submit" value="{{ 'Search' }}" class="btn btn-primary">
        <input type="reset" value="{{ 'Reset' }}" class="btn btn-default">
    </div>
    {{ active_form_end() }}
</div>