<div>
    {% if h1 %}
        {% set h1_final =  h1 %}
    {% else %}
        {% if category.name != '' %}
            {% set h1_final = t('main', '{category}_stores_default_h1', {'category': category.name}) %}
        {% else %}
            {% set h1_final = t('main', 'stores_default_h1') %}
        {% endif %}
        {% set h1_final = h1_final~' <span>('~total_v~')</span>' %}
    {% endif %}
<h1 id="catalog_products-title" class="page-header align-center laptop-no-margin-bottom">
    {{ h1_final|raw }}
</h1>
</div>