    {% set h1_final = h1_final~' (<span id="catalog-categories_count">'~total_v~'</span>)' %}
{#{% endif %}#}
{#краткая информация категории#}
<section class="gray-box wrap-round margin">
  <h1  id="catalog-products-h1" class="page-header align-center laptop-no-margin-bottom">{{ h1_final|raw }}</h1>
    {% if content %}
      <div class="catalog_category-short-description laptop_hide catalog_category-content sd_content">
          {{ content|raw }}
      </div>
    {% endif %}
</section>

<section class="catalog margin">
  <div class="page-wrap">
    <div class="page-wrap-flex">

      {#слева категории#}
      <div class="catalog-categories products">
      </div>

      {#справа продукты#}
      <div class="catalog-stores ">

        {#{% include('parts/products/filter.twig') %}#}

        <div class="catalog-categories_tree-toggle">
          {{ svg('bars-slim', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-close','@frontend')|raw }}
          {{ svg('close', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-open', '@frontend')|raw }}
          <span class="catalog-categories_tree-toggle-tittle">{{ t('main', 'stores_change_category')|raw }}</span>
        </div>

        {#выбор и отображение сортировки#}
        <div class="margin-half page-wrap-flex catalog-stores_sort catalog-stores_sort-products">
          {% include('parts/sort-links-products.twig') %}
          <div id="catalog-products-info"  class="catalog-stores_sort-info">
            {{ t('main','show_{start}-{end}_from_{total}', {'start':  (total_v > 0 ? offset_products + 1 : '0'), 'end': offset_products + show_products, 'total': total_v})|raw }}
          </div>
        </div>

        {#<div class="category-title-wrapper">#}
        {#{% include 'parts/dropdown-limit-catalog.twig' %}#}
        {#</div>#}

        <div id="catalog-products-content" class="catalog-stores_stores margin">
          {% if products|length > 0 %}
            <div class="catalog-stores_list shops margin">
              {% for product in products %}
                {#<div class="col-sm-3 col-md-3">#}
                {% include 'parts/products/product.twig' %}
                {#</div>#}
              {% endfor %}
              <div class="catalog_products_item shop shop-empty"></div>
              <div class="catalog_products_item shop shop-empty"></div>
              <div class="catalog_products_item shop shop-empty"></div>
            </div>

            {% if pagination %}
              <div class="catalog_pagination products">
                {{ pagination|raw }}
              </div>
            {% endif %}


          {% else %}
            <p class="catalog-stores alert">{{ t('main', 'not_found')|raw }}</p>
          {% endif %}
        </div>

        {% if additional_content %}
          <div class="catalog_category-down-description margin sd_content">
              {{ additional_content|raw }}
          </div>
        {% endif %}


      </div>
    </div>

  </div>


</section>

