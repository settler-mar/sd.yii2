{% if h1 %}
  {#h1 из базы#}
  {% set h1_final =  h1 %}
{% else %}
  {#если нет, то#}
  {% set h1_final = t('shop', 'shop_start_h1') %}
{% endif %}
{#краткая информация категории#}
<section class="gray-box wrap-round margin">
  <h1 class="page-header align-center laptop-no-margin-bottom">{{ h1_final|raw }}</h1>
  {% if content %}
    <div class="catalog_category-short-description laptop_hide catalog_category-content sd_content">
      {{ content|raw }}
    </div>
  {% endif %}
</section>

<section class="catalog margin">
  <div class="page-wrap">
    <div class="page-wrap-flex">

      {#слева категории#}
      <div class="catalog-categories products">
        <div id="left_menu"></div>
        <div id="left_filter"></div>
        <div id="left_baner"></div>
      </div>

      {#справа продукты#}
      <div class="catalog-stores">
        <div id="content" class="ajax_update">
          {% if content_tpl=="_index" %}
            {% include 'parts/products/index_content.twig' %}
          {% endif %}
        </div>
        <div class="catalog_category-down-description margin sd_content ajax_update" id="additional_content">
          {% if additional_content %}
              {{ additional_content|raw }}
          {% endif %}
        </div>
      </div>
    </div>

    {% if content_tpl=="_index" %}
      {% include 'parts/products/index_down.twig' %}
    {% endif %}
  </div>
</section>


<script charset="UTF-8" src="/js/shop_render.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function(){
    shopRender.init({{ content_tpl=="_index"?'true':'false' }},"{{ _href('/shop') }}");
  });
</script>