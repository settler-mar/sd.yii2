{{ use('/yii/widgets/LinkPager') }}
{% set title = 'За время работы с SecretDiscounter Вы привели:' %}
{{ set(this, 'title', title) }}
{% if not this.params.breadcrumbs %}
{{ set(this, 'params', this.params|merge({'breadcrumbs': []})) }}
{% endif %}
{% set breadcrumbs = this.params.breadcrumbs %}
{% set breadcrumbs = breadcrumbs|merge([title]) %}

{% set curr = app.params.currencies[app.params.valuta].text ? app.params.currencies[app.params.valuta].text : '' %}

<div class="content-wrapper">
  <section>
    <div class="row">
      <div class="col-md-12">
        <h3>{{ html.encode(this.title) }}</h3>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_users_total') }}:
        <b>{{ _nf(users_total.total,0)  | raw}}</b>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_users_active') }}:
        <b>{{ _nf(users_total.active,0) | raw}}</b>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_your_status') }}:
        <b>
          {{ bonus_status.display_name }}
          ({{ bonus_status.bonus }}%)
          {% if bonus_status.is_webmaster==1 %}
             - {{ t('account', 'users_your_status_webmaster') }}
          {% endif %}
        </b>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_payment_confirmed_expected') }}:
        <b>{{ _nf(users_total.cnt_confirmed,0) | raw}}</b> /
        <b>{{ _nf(users_total.cnt_pending,0) | raw}}</b>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_cashback_confirmed_expected') }}:
        <b>{{ _nf(users_total.sum_confirmed,0) | raw}} {{ curr }}</b> /
        <b>{{ _nf(users_total.sum_pending,0) | raw}} {{ curr }}</b>
      </div>
      <div class="col-md-12">
        {{ t('account', 'users_summ_confirmed_expected') }}:
        <b>{{ _nf(users_total.sum_to_ref_confirmed,0) | raw}} {{ curr }}</b> /
        <b>{{ _nf(users_total.sum_to_ref_pending,0) | raw}} {{ curr }}</b>
      </div>
      <form method="get" class="col-md-12">
        {{ t('common', 'date_range') }}:
        {{ data_ranger | raw }}
      </form>
    </div>

    <div class="col-md-12">
      {% if users|length > 0 %}
        <table class="table table-users">
          <thead>
          <tr>
            <th>ID</th>
            <th>{{ t('common', 'Дата регистрации') }}</th>
            <th>{{ t('common', 'status_loyalty') }}</th>
            <th>
              {{ t('account', 'users_payment_confirmed_expected_table_header')|raw }}
            </th>
            <th>
              {{ t('account', 'users_cashback_confirmed_expected_table_header')|raw }}
            </th>
            <th>
             {{ t('account', 'users_bonus_confirmed_expected_table_header')|raw }}
            </th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            {% for user in users %}
              <tr>
                <td>{{user.uid}}</td>
                <td>{{user.added}}</td>
                <td>
                  {{user.loyalty_status_data.display_name}}
                  ({{user.loyalty_status_data.bonus}}%)
                  {% if user.loyalty_status_data.is_vip==1 %}
                    <br>{{ t('account', 'users_vip_client') }}
                  {% endif %}
                </td>
                <td>
                  {{ _nf(user.cnt_confirmed,0) | raw}}
                  /
                  {{ _nf(user.cnt_pending,0) | raw}}
                </td>
                <td>
                  {{ _nf(user.sum_confirmed) | raw }} р
                  /
                  {{ _nf(user.sum_pending) | raw }} р
                </td>
                <td>
                  {{ _nf(user.sum_to_friend_confirmed) | raw }} р
                  /
                  {{ _nf(user.sum_to_friend_pending) | raw }} р
                </td>
                <td>
                  {% if (user.cnt_confirmed + user.cnt_pending) > 0 %}
                   <a href="/account/payments/ref/id:{{ user.uid }}">{{ t('account', 'users_payments_details') }}</a>
                  {% endif %}
                </td>

              </tr>
            {% endfor %}
          </tbody>
        </table>
        {% include '/parts/pagination.twig' %}

      {% else %}
          <div class="col-md-12">
            <div class="not-found">{{ t('accont', 'users_referrals_empty') }}</div>
          </div>
      {% endif %}
    </div>

  </section>
</div>
