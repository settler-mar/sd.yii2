<div class="sign-up popup-sign-up" style="opacity: 1;">
  <h3>Регистрация</h3>
  {#<p class="sign-up-tagline">#}
    {#<center>#}
      {#Регистрация полностью бесплатна и займёт у вас несколько секунд#}
    {#</center>#}
  {#</p>#}
  {% set form = active_form_begin({
    'id' : isAjax?'registration-form-ajax':'registration-form',
    'layout' : 'horizontal',
    'action':isAjax?"/registration":'/registration?index=2',
    'fieldConfig':{
      'horizontalCssClasses':{
        'wrapper':'form-input-group',
      }
    },
    'options' : {
      'class' : 'signup-form ajax_form',
      'role' : 'form'
    },
  }) %}

  {{ form.field(model, 'email',{
    'template' :
    '{beginWrapper}<i class="fa fa-envelope"></i>{input}\n{endWrapper}\n{error}'
  }).textInput({'placeholder':'Введите ваш E-mail'}) | raw }}

  {{ form.field(model, 'password',{
    'template' :
    '{beginWrapper}<i class="fa fa-lock"></i>{input}\n{endWrapper}\n{error}'
  }).passwordInput({'placeholder':'Придумайте пароль'}) | raw }}

  {{ form.field(model, 'password_repeat',{
    'template' :
    '{beginWrapper}<i class="fa fa-lock"></i>{input}\n{endWrapper}\n{error}'
  }).passwordInput({'placeholder':'Повторите пароль'}) | raw }}

  <div style="text-align: center; width:75%; margin: 10px auto 20px; color: #888;">Я принимаю условия <a href="/terms" class="ignore-hash" style="text-decoration: underline;">Клиентского соглашения</a></div>

  <button type="submit" class="btn-fill sign-up-btn" style="padding: 10px;">Зарегистрироваться</button>
  {{ active_form_end() }}


  <div style="margin-top:30px; text-transform: uppercase; font-size: 12px; text-transform: uppercase;">
    <div style="display: inline-block; border-bottom: 2px solid #eee; margin-bottom: 2px;width: 30%;" ></div>
    <div style="display: inline-block; color: #888;">
      Или при помощи соцсетей
    </div>
    <div style="display: inline-block;border-bottom: 2px solid #eee;margin-bottom: 2px;width: 30%;" ></div>
  </div>
  <div style="margin-top: 20px;margin-bottom:20px;">
      {{ use('frontend/components/socials/EauthWidget') }}
      {{ use('frontend/components/socials/EauthWidget') }}
      {{ eauth_widget_widget() }}
  </div>
  <div class="sign-up-buttons" style="background-color: #eee; padding-top: 20px; margin-top: 0;"><a href="#login" class="btn ignore-hash">Я уже зарегистрирован</a></div>
  <div style="background-color: #eee; color: #888; text-align: center; padding: 10px; font-size: 12px;">Войдите, усли у вас уже есть аккаунт</div>


  {#<p class="terms"><b>Или регистрируйтесь при помощи соцсетей</b></p>#}
  {#{{ use('frontend/components/socials/EauthWidget') }}#}
  {#{{ eauth_widget_widget() }}#}

  {#<div class="sign-up-buttons"><a href="#login" class="btn ignore-hash">Я уже зарегистрирован</a></div>#}

  {#<p class="terms">#}
    {#Регистрируясь, я соглашаюсь с <a href="/terms">Правилами</a>#}
  {#</p>#}

</div>