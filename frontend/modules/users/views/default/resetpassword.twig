<div class="sign-up popup-sign-up">
    <h2 class="title-no-line">Восстановление пароля</h2>
    <p class="align-center">
        Инструкции для восстановления пароля<br>
        придут к вам на указанный e-mail
    </p>
    {% set form = active_form_begin({
    'id' : isAjax?'resetpassword-form-ajax':'lresetpassword-form',
    'layout' : 'horizontal',
    'fieldConfig':{
    'horizontalCssClasses':{
    'wrapper':'form-input-group',
    }
    },
    'options' : {
    'class' : 'signup-form ajax_form',
    'role' : 'form'
    },
    }) %}
    {{ form.field(model, 'email',{
        'template' :
        '{beginWrapper}<i>'~svg("envelope",'form-icon')~'</i>{input}\n{endWrapper}\n{error}'
    }).textInput({'placeholder':'Введите ваш e-mail','required':true}) | raw }}

    {{ form.field(model, 'password',{
        'template' :
        '{beginWrapper}<i>'~svg("lock",'form-icon')~'</i>{input}\n{endWrapper}\n{error}'
    }).passwordInput({'placeholder':'Желаемый пароль','required':true}) | raw }}

    <button type="submit" class="btn block_margin-auto btn-min_width240 btn-margin_top">Восстановить пароль</button>
    {{ active_form_end() }}
</div>
</br>