<div class="sign-up popup-sign-up {% if isAjax == false %} noajax {% endif %} social" style="opacity: 1;">
    <h3>Введите E-mail</h3>
    <p class="sign-up-tagline">Для завершения регистрации необходимо ввести e-mail</p>
    {% set form = active_form_begin({
    'id' : isAjax?'email-form-ajax':'email-form',
    'layout' : 'horizontal',
    'fieldConfig':{
    'horizontalCssClasses':{
    'wrapper':'form-input-group',
    }
    },
    'options' : {
    'class' : 'signup-form ajax_form',
    'role' : 'form'
    },
    }) %}
    {{ form.field(model, 'email_manual',{
        'template' :
        '{beginWrapper}<i class="fa fa-envelope"></i>{input}\n{endWrapper}\n{error}'
    }).textInput({'placeholder':'Введите ваш e-mail','required':true})|raw }}

    <button type="submit" class="btn-fill sign-up-btn">Отправить</button>
    {{ form.field(model, 'social_name', {
        'template' :
        '{input}{error}'
    }).hiddenInput().label(false)|raw }}
    {{ form.field(model, 'social_id', {
        'template' :
        '{input}{error}'
    }).hiddenInput().label(false)|raw }}
    {{ active_form_end() }}

</div>
<script type="text/javascript">
    window.resizeTo(540, 370);
</script>