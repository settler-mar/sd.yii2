{{ use('/yii/widgets/ActiveForm') }}
<div class="users-search">
    {% set form = active_form_begin({
        'action': '/admin/users',
        'method': 'get',
    }) %}

    <div class="form-group">
        <h4>Поиск</h4>
        <input type="text" placeholder="Поиск по User ID" name="user_id" value="{{ get.user_id }}">
        <input type="text" placeholder="Поиск по IP" name="ip" value="{{ get.ip }}">
        <input type="text" placeholder="Поиск по Ref ID" name="ref_id" value="{{ get.ref_id }}">
        <input type="text" placeholder="Поиск по email" name="email" value="{{ get.email }}">
        <select name="is_active">
            <option value="" {% if (get.is_active == null) %}selected{% endif %}>Любой статус</option>
            <option value="0" {% if (get.is_active == '0') %}selected{% endif %}>Неактивен</option>
            <option value="1" {% if (get.is_active == '1') %}selected{% endif %}>Активен</option>
        </select>
        <label>По дате регистрации</label>
        {{ data_ranger_added|raw }}

    </div>
    <div class="form-group">
        <label for="select_loaylty_status">Статус лояльности</label>
        <select name="loyalty_status" id="select_loaylty_status">
            <option value="" {% if (get.loyalty_status == null) %}selected{% endif %}>Выберить статус</option>
            {% for status_key, loyalty_status in app.params.dictionary.loyalty_status %}
                <option value="{{ status_key }}" {% if (get.loyalty_status !='' and get.loyalty_status == status_key) %}selected{% endif %}>{{ loyalty_status.display_name }}</option>
            {% endfor %}
            <option value="personal" {% if get.loyalty_status == 'personal' %}selected{% endif %}>Персонал</option>
        </select>
    </div>
    <div class="form-group">
        <label for="select_expected_to">Возможные участники акции</label>
        <select name="expected_to" id="select_expected_to">
            <option value="" >Выберите акцию</option>
            {% for action in actions %}
                <option value="{{ action.uid }}" {% if (action.uid == get.expected_to) %}selected{% endif %}>{{ action.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="select_joined_to">Подключившиеся к акции</label>
        <select name="joined_to" id="select_joined_to">
            <option value="" >Выберите акцию</option>
            {% for action in actions %}
                <option value="{{ action.uid }}" {% if (action.uid == get.joined_to) %}selected{% endif %}>{{ action.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="select_completed_to">Выполнившие условия акции</label>
        <select name="completed_to" id="select_completed_to">
            <option value="" >Выберите акцию</option>
            {% for action in actions %}
                <option value="{{ action.uid }}" {% if (action.uid == get.completed_to) %}selected{% endif %}>{{ action.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="select_oauth_client">Клиенты API</label>
        <select name="oauth_client" id="select_oauth_client">
            <option value="" ></option>
            <option value="1" {% if get.oauth_client %} selected {% endif %} >Да</option>
        </select>
    </div>
    <div class="form-group">
        <label for="search_sort">Сортировать по</label>
        <select name="sort" id="search_sort">
            <option value="">Выберите поле</option>
            <option {% if get.sort == 'sum_confirmed' %}selected{% endif %} value="sum_confirmed">По накопленному кэшбэку</option>
            <option {% if get.sort == 'sum_from_ref_confirmed' %}selected{% endif %} value="sum_from_ref_confirmed">По накопленному за рефералов</option>
            <option {% if get.sort == 'sum_withdraw' %}selected{% endif %} value="sum_withdraw">По выплаченной сумме</option>
            <option {% if get.sort == 'sum_foundation' %}selected{% endif %} value="sum_foundation">По благотворительности</option>
        </select>
        <select name="order" id="search_sort_order">
            <option value="DESC" {% if get.order == 'DESC' %}selected{% endif %}>По убыванию</option>
            <option value="ASC" {% if get.order == 'ASC' %}selected{% endif %}>По возрастанию</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Поиск" class="btn btn-primary">
        <a href="/admin/users" class="btn btn-default">Сброс</a>
        <a href="/admin/users/create" class="btn btn-success" style="color:#fff">Создать пользователя</a>
        <a class="btn btn-primary" href="/admin/users/export{{ _if(get_params, '?'~get_params, '')|raw }}">Экспорт</a>
    </div>
    {{ active_form_end() }}

</div>