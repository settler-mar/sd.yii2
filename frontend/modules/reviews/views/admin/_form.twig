{{ use('/yii/widgets/ActiveForm') }}
<div class="reviews-form">
    {% set form = active_form_begin() %}

        {{ form.field(model, 'user_id').textInput()|raw }}

        {{ form.field(model, 'title').textInput({'maxlength':true})|raw }}

        {{ form.field(model, 'text').textarea({'rows':6})|raw }}

        {{ form.field(model, 'rating').textInput()|raw }}

        {{ form.field(model, 'added').textInput()|raw }}

        {{ form.field(model, 'is_active').textInput()|raw }}

        {{ form.field(model, 'is_top').textInput()|raw }}

        {{ form.field(model, 'store_id').textInput()|raw }}

    <div class="form-group">
        <input type="submit" value="{{ model.isNewRecord ? 'Create' : 'Update' }}" class="{{ model.isNewRecord ? "btn btn-success" : "btn btn-primary" }}">
    </div>
    {{ active_form_end() }}
</div>