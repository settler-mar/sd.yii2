{{ use('/yii/widgets/ActiveForm') }}
<div class="users-visits-form">
    {% set form = active_form_begin() %}

        {{ form.field(model, 'user_id').textInput()|raw }}

        {{ form.field(model, 'source').textInput()|raw }}

        {{ form.field(model, 'visit_date').textInput()|raw }}

        {{ form.field(model, 'store_id').textInput()|raw }}

        {{ form.field(model, 'user_ip').textInput({'maxlength':true})|raw }}

    <div class="form-group">
        <input type="submit" value="{{ model.isNewRecord ? 'Create' : 'Update' }}" class="{{ model.isNewRecord ? "btn btn-success" : "btn btn-primary" }}">
    </div>
    {{ active_form_end() }}
</div>