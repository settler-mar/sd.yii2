{{ use('/yii/widgets/ActiveForm') }}
<div class="users-visits-search">
    {% set form = active_form_begin({
            'action': ['index'],
            'method': 'get',
        })
    %}

    {{ form.field(model, 'uid')|raw }}

    {{ form.field(model, 'user_id')|raw }}

    {{ form.field(model, 'source')|raw }}

    {{ form.field(model, 'visit_date')|raw }}

    {{ form.field(model, 'store_id')|raw }}

    {# form.field(model, 'user_ip')|raw #}

    <div class="form-group">
        <input type="submit" value="{{ 'Search' }}" class="btn btn-primary">
        <input type="reset" value="{{ 'Reset' }}" class="btn btn-default">
    </div>
    {{ active_form_end() }}
</div>