{{ use('yii/bootstrap') }}
{{ use('yii\bootstrap\ActiveForm') }}
{{ use('yii/helpers/Html') }}
{{ use('yii/bootsrap/Nav') }}
{{ use('yii/bootsrap/NavBar') }}
{{ use('yii/widgets/Breadcrumbs') }}
{{ use('b2b/components/ContentMenu') }}
{{ use('common/widgets/Alert') }}
{{ register_asset_bundle('b2b/assets/AppAsset') }}

{{ void(this.beginPage()) }}
<!DOCTYPE html>
<html lang="{{ app.language }}
<head>
    <meta charset="{{ app.charset }}
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ html.encode(this.title) }}</title>
    {{ html.csrfMetaTags | raw }}
    {{   void(this.head) }}
</head>
<body>
{{ void(this.beginBody()) }}
<div class="wrap">

    {{ nav_bar_begin({
        'brandLabel': '<img src="/images/templates/secretdiscounter-logo.png" width="170" alt="Secretdiscounter logo">',
        'brandUrl' : '/',
        'options' : {'class': 'navbar-inverse navbar-fixed-top'}
    })  }}
    {% if app.user.isGuest %}
        {% set menuItems = [{'label': 'Авторизация', 'url': ['/login']}] %}
    {% else %}
        {%  set menuItems = [{'label': 'Личный кабинет', 'url': ['/home']}] %}
        {% set label='Выход ('~app.user.identity.username~')' %}
        {% set menuItems = menuItems|merge([{'label': label, 'url': ['/logout']}]) %}
    {% endif %}
    {{ nav_widget({'options': {'class': 'navbar-nav navbar-right'}, 'items': menuItems,}) }}
    {{ nav_bar_end() }}


    <div class="container">
        {{ breadcrumbs_widget({'links': this.params.breadcrumbs}) }}
        {{ alert_widget() }}
        {% set content_menu = content_menu_widget({'current_item':this.title, 'is_guests':app.user.isGuest}) %}
        {% if content_menu %}
            <div class="col-sm-2">
                {{ content_menu|raw }}
            </div>
            <div class="col-sm-10">
                {{ content|raw }}
            </div>
        {% else %}
            <div class="col-sm-12">
                {{ content|raw }}
            </div>
        {% endif %}

    </div>
</div>

<footer class="footer">
    <div class="container">
        <p class="pull-left">&copy; Secret Discounter Ltd., 2016–2017.</p>
        <p class="pull-right">Все права защищены</p>
    </div>
</footer>

{{   void(this.endBody()) }}
</body>
</html>
{{   void(this.endPage()) }}

