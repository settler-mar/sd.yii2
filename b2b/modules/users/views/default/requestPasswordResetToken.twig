<div class="site-login clearfix site-request-password-reset">
  <div class="col-sm-8 site-login__left">
    <h1 class="site-login__header">{{ html.encode(this.title) }}</h1>
    <p>Пожалуйста, введите ваш Email, и Вы получите ссылку на восстановление пароля.</p>

  </div>
  <div class="col-sm-4 site-login__right">

    <div class="site-login__right-header">
      <h4 class="site-login__right-text">Введите email</h4>
    </div>
    {% set form = Active_Form_begin({
      'id': 'login-form',
      'options': {'class': 'form-horizontal'},
      'fieldConfig': {
          'template': "{label}\n<div class=\"col-lg-12\">{input}</div>\n<div class=\"col-lg-12\">{error}</div>",
          'labelOptions': {'class': 'col-lg-12 control-label'},
      },
    }) %}

    {{ form.field(model, 'email').textInput({'autofocus': true})|raw }}

    <div class="form-group site-login__right-buttons">
      <div class="col-lg-12">
        {{ html.submitButton('<i class="fa fa-user" aria-hidden="true"></i> Отправить', {'class': 'btn btn-primary', 'name': 'login-button'})|raw }}
      </div>
    </div>

    {{ Active_Form_end() }}
  </div>

</div>