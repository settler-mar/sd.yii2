{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "__MSG_appShortName__",
  "default_locale": "ru",
  "version": "2.6",
  "homepage_url": "https://secretdiscounter.com/",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "https://secretdiscounter.com/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/favicon-32x32.png",
    "default_title": "SecretDiscounter Cash Back Button",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "js/common/utils.js",
        "js/common/config.js",
        "js/common/icons.js",
        "js/common/templates.js",
        "js/common/storage.js",
        "js/common/storage_manage.js",
        "js/common/search.js",
        "js/common/stores.js",
        "js/common/translate.js",
        "js/common/language.js",
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "css": [
        "css/content.css"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "icons": {
    "16": "img/favicon-16x16.png",
    "24": "img/favicon-24x24.png",
    "32": "img/favicon-32x32.png",
    "48": "img/favicon-48x48.png"
  },
  "web_accessible_resources": [
    "css/*.css",
    "fonts/*.woff",
    "fonts/*.woff2",
    "fonts/*.ttf",
    "fonts/*.otf"
  ]
}