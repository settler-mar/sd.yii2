{% if categories|length %}
    <ul class="shops-category-menu_list level_{{ level }}" >
        {% for category in categories  %}
            <li class="shops-category-menu_item level_{{ category.level }}{% if category.childs|length %} menu-group{% endif %} {{ _if(_is_category_open(category),'open','') }}">
                {% if category.current %}
                    <span class="active">{{ category.name }} ({{ category.count }})
                        {% if category.childs|length %}
                            {{ svg('angle-down', 'menu_angle-down', '@frontend')|raw }}
                        {% endif %}
                    </span>
                {% else %}
                    <a class="shops-category-menu_link" href="/category/{{ category.route }}">{{ category.name }} ({{ category.count }})
                        {% if category.childs|length %}
                            {{ svg('angle-down', 'menu_angle-down', '@frontend')|raw }}
                        {% endif %}
                    </a>
                {% endif %}
                {% if category.childs|length %}
                    {% set categories = category.childs %}
                    {% set level = category.level %}
                    {% include('category_menu.twig') %}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}