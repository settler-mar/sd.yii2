
{% if h1 %}
    {#h1 из базы#}
    {% set h1_final =  h1 %}
{% else %}
    {#если нет, то#}
    {% if category.name != '' %}
        {% set h1_final = t('main', '{category}_stores_default_h1', {'category': category.name}) %}
    {% else %}
        {% set h1_final = t('main', 'stores_default_h1') %}
    {% endif %}
    {% set h1_final = h1_final~' <span>('~total_v~')</span>' %}
{% endif %}
{#краткая информация категории#}
        <section class="gray-box wrap-round margin">
            <h1 class="page-header align-center laptop-no-margin-bottom" >{{ h1_final|raw }}</h1>
        </section>

<section class="catalog margin">
    <div class="page-wrap">
        {% include('parts/products/filter.twig') %}
        <div class="page-wrap-flex">


            {#слева категории#}
            <div class="catalog-categories">
                {% include('parts/products/left_menu.twig') %}
            </div>

            {#справа продукты#}
            <div class="catalog-stores ">

                {#{% include('parts/products/filter.twig') %}#}

                <div class="catalog-categories_tree-toggle">
                    {{ svg('bars-slim', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-close','@frontend')|raw }}
                    {{ svg('close', 'catalog-categories_tree-toggle-icon catalog-categories_tree-toggle-icon-open', '@frontend')|raw }}
                    <span class="catalog-categories_tree-toggle-tittle">{{ t('main', 'stores_change_category')|raw }}</span>
                </div>

                {#выбор и отображение сортировки#}
                <div class="margin-half page-wrap-flex catalog-stores_sort">
                    {% include('parts/sort-links.twig') %}
                    <div class="catalog-stores_sort-info">
                        {{ t('main','show_{start}-{end}_from_{total}', {'start':  (total_v > 0 ? offset_products + 1 : '0'), 'end': offset_products + show_products, 'total': total_v})|raw }}
                    </div>
                </div>

                {#<div class="category-title-wrapper">#}
                    {#{% include 'parts/dropdown-limit-catalog.twig' %}#}
                {#</div>#}

                <div class="catalog-stores_stores margin">
                    {% if products|length > 0 %}
                        <div class="catalog-stores_list shops margin">
                            {% for product in products %}
                                {#<div class="col-sm-3 col-md-3">#}
                                {% include 'parts/products/product.twig' %}
                                {#</div>#}
                            {% endfor %}
                            <div class="shop shop-empty"></div>
                            <div class="shop shop-empty"></div>
                            <div class="shop shop-empty"></div>
                            <div class="shop shop-empty"></div>
                            <div class="shop shop-empty"></div>
                            <div class="shop shop-empty"></div>
                        </div>

                        {% if pagination %}
                            <div class="catalog_pagination">
                                {{pagination|raw}}
                            </div>
                        {% endif %}


                    {% else %}
                        <p>{{ t('main', 'not_found')|raw }}</p>
                    {% endif %}
                </div>



            </div>
        </div>

        <div class="catalog_products_store_conditions" id="product_store_cachback_modal_id">
            <div class="catalog_products_store_conditions_content">
                {{ _constant('product_cashback_informaiton')|raw }}
            </div>
        </div>
    </div>



</section>

